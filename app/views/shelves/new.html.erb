<div class="container">
	<%= form_for @shelf do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.submit 'Create', class: 'btn btn-primary'%>
	<% end %>
</div>