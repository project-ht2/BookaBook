<% height = 150 unless defined?(height) %>
<% social_link = "https://fb.com/#{user.uid}" unless !user.provider.nil? || (controller.controller_name == "users" && controller.action_name == "show" && params[:id] == user.id) %>
<%= link_to image_tag(user.avatar(height), class: "img-rounded big-avatar", :alt => user.name || user.email), social_link || user %>