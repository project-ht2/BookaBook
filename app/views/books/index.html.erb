<div class="container main-content">
  <h3>All books (<%= @books.count %>)</h3>
  <div class="books-list">
    <% @books.in_groups_of(3) do |g| %>
      <div class="row">
        <% g.compact.each do |book| %>
            <%= render partial: 'book', object: book, as: 'book' %>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
  <%= link_to 'New book', new_book_path, class: "btn btn-default" %>
</div>
