<div class="jumbotron category-background">
</div>
<div class="intro">
  <h3 style="font-weight: 300;">Explore our groups</h3>
  <div class="row">
  <div class="intro-detail">
    <%= @category.name %> courses are organized into reading groups. Navigate our reading Groups to find the right group for you.
  </div>
  </div>
</div>
<div class="container">
  <div class="row group-list">
    <% @category.groups.each do |group| %>
        <div class="col-md-6">
          <%= link_to user_group_path(group) do %>
              <div class="card card--a ">
                <div class="bucket">
                  <div class="row">
                    <div class="col-xs-3">
                      <%= image_tag group.image_url, class: 'padge img-circle' %>
                    </div>
                    <div class="col-xs-9">
                      <div class="row">
                        <h3 class="group-title col-xs-12">
                          <span class="group-title-link"><%= group.name %></span>
                          <span class="book-count-title"><%= group.book_threads.count %> Books</span>
                        </h3>
                        <div class="col-xs-12 group-description">
                          <p><%= group.description %></p>
                        </div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>